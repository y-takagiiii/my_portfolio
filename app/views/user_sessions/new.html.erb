<h1>ログイン</h1>

<%= form_with url: login_path do |f| %>
  <div>
    <%= f.label :email, style: "display: block" %>
    <%= f.text_field :email, autofocus: true, class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div>
    <%= f.label :password, style: "display: block" %>
    <%= f.password_field :password, class: "input input-bordered w-full max-w-xs" %>
  </div>

  <div>
    <%= f.submit "ログイン", class: "btn btn-secondary"%>
  </div>
<% end %>

<div>
  <%= link_to "アカウントお持ちでない方はこちら", new_user_path, class: "link" %>
</div>
