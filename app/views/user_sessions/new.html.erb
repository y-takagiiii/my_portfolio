<section class="w-full top-0">
  <div class="container mx-auto px-4 h-full">
    <div class="flex content-center items-center justify-center h-full">
      <div class="w-full lg:w-4/12 px-4 pt-20">
        <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-gray-300 border-0">
          <div class="rounded-t mb-0 px-6 py-6">
            <div class="text-center mb-3">
              <h6 class="text-gray-600 text-sm font-bold">Login with</h6>
            </div>
            <div class="flex justify-center gap-2">
              <%= link_to '#', class: "bg-white active:bg-gray-100 text-gray-800 font-normal px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1 shadow hover:shadow-md inline-flex items-center font-bold text-xs", style: "transition: all 0.15s ease 0s;" do %>
                <i class="fa-brands fa-google mr-3"></i>Google
              <% end %>
              <%= button_to guest_login_path, class: "bg-white active:bg-gray-100 text-gray-800 font-normal px-4 py-2 rounded outline-none focus:outline-none mr-1 mb-1 shadow hover:shadow-md inline-flex items-center font-bold text-xs", style: "transition: all 0.15s ease 0s;" do %>
                <i class="fa-solid fa-circle-user mr-3"></i>ゲスト
              <% end %>
            </div>
            <div class="divider text-gray-500">OR</div>
          </div>
          <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
            <%= form_with url: login_path do |f| %>
              <div class="relative w-full mb-3">
                <%= f.label :email, User.human_attribute_name(:email), class: "block text-gray-700 text-xs font-bold mb-2" %>
                <%= f.text_field :email, autofocus: true, class: "input input-bordered w-full" %>
              </div>

              <div class="relative w-full mb-3">
                <%= f.label :password, User.human_attribute_name(:password), class: "block text-gray-700 text-xs font-bold mb-2" %>
                <%= f.password_field :password, class: "input input-bordered w-full" %>
              </div>

              <div class="text-center mt-6">
                <%= f.submit (t 'defaults.login'), class: "btn btn-secondary px-6 py-3"%>
              </div>
            <% end %>
          </div>
        </div>
        <div class="flex flex-wrap mt-6">
          <div class="w-1/2">
            <%= link_to '#', class: "text-gray-500" do %>
              <small>パスワードをお忘れの方</small>
            <% end %>
          </div>
          <div class="w-1/2 text-right">
            <%= link_to new_user_path, class: "text-gray-500" do %>
              <small>アカウントをお持ちでない方</small>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
